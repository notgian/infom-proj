<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.eqlab.eqCtrl"
           style="-fx-background-color: white;">

    <VBox alignment="TOP_CENTER" spacing="20"
          style="-fx-background-color: #d1e5f4;
                 -fx-padding: 30 25 30 25;
                 -fx-background-radius: 20;">

        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: #c3d7e8;
                     -fx-background-radius: 20;
                     -fx-padding: 10 20;">
            <ImageView fitHeight="30" fitWidth="30"
                       pickOnBounds="true" preserveRatio="true"/>
            <Label text="Lab Tech User"
                   style="-fx-font-size: 16px;
                          -fx-text-fill: #333333;"/>
        </HBox>

        <Label text="Equipment"
               style="-fx-font-size: 22px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #333333;"/>

        <ScrollPane fitToWidth="true"
                    style="-fx-background-color: transparent;
                           -fx-padding: 10;">
            <FlowPane fx:id="equipmentGrid"
                      hgap="15" vgap="15"
                      alignment="TOP_LEFT"
                      style="-fx-padding: 10;">
                <VBox style="-fx-background-color: #c3d7e8;
                             -fx-background-radius: 15;
                             -fx-padding: 20 15;
                             -fx-min-width: 90;
                             -fx-min-height: 90;" />
                <VBox style="-fx-background-color: #c3d7e8;
                             -fx-background-radius: 15;
                             -fx-padding: 20 15;
                             -fx-min-width: 90;
                             -fx-min-height: 90;" />
                <VBox style="-fx-background-color: #c3d7e8;
                             -fx-background-radius: 15;
                             -fx-padding: 20 15;
                             -fx-min-width: 90;
                             -fx-min-height: 90;" />
            </FlowPane>
        </ScrollPane>

        <VBox spacing="8"
              style="-fx-background-color: #c3d7e8;
                     -fx-background-radius: 20;
                     -fx-padding: 20 20;
                     -fx-min-height: 150;">
            <Label text="ITEM NAME" style="-fx-font-size: 14px;" />
            <Label text="STATUS" style="-fx-font-size: 14px;" />
            <Label text="BORROWER ID" style="-fx-font-size: 14px;" />
        </VBox>

        <Button text="BORROW"
                style="-fx-background-color: #9abddc;
                       -fx-border-color: #888888;
                       -fx-border-width: 2;
                       -fx-border-radius: 25;
                       -fx-background-radius: 25;
                       -fx-font-size: 16px;
                       -fx-text-fill: #333333;
                       -fx-padding: 10 60;"/>

    </VBox>

</StackPane>
