<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.eqlab2.DashboardController"
      alignment="CENTER"
      spacing="30"
      prefWidth="400" prefHeight="650"
      style="-fx-padding: 40; -fx-background-color: #e7eefc;"
      stylesheets="@clothes.css">

    <Label text="Welcome!"
           style="-fx-font-size: 26px; -fx-font-weight: bold;" />

    <Button text="Reserve a Lab"
            onAction="#goToReservation"
            prefWidth="260" prefHeight="55"
            styleClass="dashboard-reserve-button" />

    <!-- CANCELLATION OPTION MOVED HERE to be next to Reserve -->
    <Button text="Cancel Lab Reservation"
            onAction="#goToCancellation"
            prefWidth="260" prefHeight="55"
            styleClass="cancel-reservation-button" />

    <Button text="Borrow Lab Equipment"
            onAction="#goToBorrow"
            prefWidth="260" prefHeight="55"
            styleClass="dashboard-borrow-button" />

    <Button text="Return Lab Equipment"
            onAction="#goToReturn"
            prefWidth="260" prefHeight="55"
    styleClass="dashboard-return-button" />

    <Button text="Reports" onAction="#goToReport" prefWidth="260" prefHeight="55" styleClass="dashboard-return-button"/>
    <Button text="Logout"
            onAction="#logout"
            prefWidth="200" prefHeight="40"
            styleClass="dashboard-logout-button" />

</VBox>
