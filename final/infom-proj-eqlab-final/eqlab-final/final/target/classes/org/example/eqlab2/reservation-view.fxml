<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.eqlab2.ReservationController"
            stylesheets="@clothes.css"
            prefWidth="400" prefHeight="650"
            style="-fx-background-color: #e7eefc;">

    <VBox layoutX="35" layoutY="40"
          prefWidth="330" spacing="20"
          style="-fx-background-color: white;
                 -fx-background-radius: 25;
                 -fx-padding: 20;">

        <Label text="LAB RESERVATION"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Label text="Reserve a laboratory schedule"
               style="-fx-text-fill: #555;" />

        <VBox spacing="10">
            <Label text="Select Laboratory:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <ComboBox fx:id="labCombo" prefWidth="260" promptText="Choose a lab"/>
        </VBox>

        <VBox spacing="10">
            <Label text="Select Org:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <ComboBox fx:id="studentOrgDropdown" prefWidth="260" promptText="Choose a lab"/>
            </VBox>

        <Label text="Enter Student Rep ID"
               style="-fx-font-size: 14px; -fx-text-fill: #555;" />
        <TextField fx:id="studentIdField"
                   promptText="Enter Student ID"
                   prefWidth="200"/>

        <VBox spacing="10">
            <Label text="Select Date:"
                   style="-fx-font-size: 14px; -fx-font-font-weight: bold;" />
            <DatePicker fx:id="datePicker" prefWidth="260"/>
        </VBox>


        <VBox spacing="10">
            <Label text="Select Time:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <ComboBox fx:id="startTimeCombo" prefWidth="110" promptText="Start"/>
                <ComboBox fx:id="endTimeCombo" prefWidth="110" promptText="End"/>
            </HBox>
        </VBox>

        <Button fx:id="reserve1Button"
                id="reserve1Button"
                text="RESERVE"
                onAction="#reserveSlot"
                prefWidth="220" />

        <Button fx:id="backButton"
                id="backButton"
                text="Back"
                onAction="#goBackToDashboard"
                prefWidth="200" />

    </VBox>
</AnchorPane>
