<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.eqlab2.ReturnController"
            fitToWidth="true"
            prefWidth="400" prefHeight="650"
            style="-fx-background-color: #e8eefc;">

    <VBox alignment="TOP_CENTER" spacing="20"
          layoutX="20" layoutY="40"
          prefWidth="360"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20;">

        <Label text="RETURN EQUIPMENT"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <Label text="Submit the details of returned items"
               style="-fx-font-size: 14px; -fx-text-fill: #555;" />
               
       <Label text="Enter Student ID"
               style="-fx-font-size: 14px; -fx-text-fill: #555;" />
       <!-- Student ID Display -->
       <TextField fx:id="studentIdDisplay"
           promptText="Enter Student ID"
           prefWidth="200"/>

        <!-- Return Date -->
        <Label text="Return Date:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <DatePicker fx:id="returnDate" prefWidth="250"/>

        <!-- Equipment -->
        <Label text="Equipment:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ComboBox fx:id="equipmentDropdown" prefWidth="250"
                  promptText="Select equipment" />

        <!-- Condition -->
        <Label text="Condition:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ComboBox fx:id="conditionDropdown" prefWidth="250"
                  promptText="Select condition" />

        <!-- Notes -->
        <Label text="Notes (optional):"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextArea fx:id="notesField" prefWidth="250" prefHeight="80"
                  promptText="Describe any damage or issues"
                  wrapText="true" />

        <!-- Submit Button -->
        <Button text="SUBMIT RETURN"
                onAction="#submitReturn"
                prefWidth="250"
                style="-fx-background-color: #89c4ff; -fx-background-radius: 30; -fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- Back Button -->
        <Button text="Back"
                onAction="#goBack"
                prefWidth="200"
                style="-fx-background-color: #bdbdbd; -fx-background-radius: 15;" />

    </VBox>

</ScrollPane>
