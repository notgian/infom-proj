<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.eqlab2.EqlabController"
            stylesheets="@clothes.css"
            prefWidth="400" prefHeight="600">

    <VBox alignment="CENTER"
          spacing="20"
          prefWidth="260"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="50">

        <ImageView fx:id="logoImage"
                   fitWidth="300"
                   preserveRatio="true">
            <image>
                <Image url="@images/heEqlab.png"/>
            </image>
        </ImageView>

        <Label text="Equipment Borrowing and LabReservation System"
               wrapText="true"
               maxWidth="250"
               style="-fx-text-fill: #000000;
                      -fx-font-weight: bold;
                      -fx-font-size: 17px;"/>

        <Button fx:id="loginButton"
                id="loginButton"
                text="LOGIN"
                prefWidth="200"
                onAction="#goToLogin" />

        <Button fx:id="registerButton"
                id="registerButton"
                text="REGISTER"
                prefWidth="200"
                onAction="#goToRegister" />

    </VBox>
</AnchorPane>