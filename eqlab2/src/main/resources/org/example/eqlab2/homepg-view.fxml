<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.eqlab2.EqlabController"
            prefWidth="400" prefHeight="600">

    <VBox alignment="CENTER" spacing="20" layoutX="70" layoutY="100" prefWidth="260">

        <Label text="EQLAB" style="-fx-font-size: 32px; -fx-font-weight: bold;" />

        <Label text="Equipment Borrowing and Lab Reservation System"
               wrapText="true" maxWidth="250" style="-fx-text-fill: gray;" />

        <Button fx:id="loginButton"
                text="LOGIN"
                prefWidth="200"
                onAction="#goToLogin"
                style="-fx-background-color: #90caf9; -fx-background-radius: 20;" />

        <Button fx:id="registerButton"
                text="REGISTER"
                prefWidth="200"
                onAction="#goToRegister"
                style="-fx-background-color: #ce93d8; -fx-background-radius: 20;" />

    </VBox>
</AnchorPane>
