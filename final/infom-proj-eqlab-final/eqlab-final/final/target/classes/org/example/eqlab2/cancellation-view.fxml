<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.eqlab2.CancellationController"
            fitToWidth="true"
            prefWidth="400" prefHeight="650"
            style="-fx-background-color: #e7eefc;"
            stylesheets="@clothes.css">

    <VBox alignment="TOP_CENTER" spacing="20"
          prefWidth="360"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 25;">

        <Label text="CANCEL RESERVATION"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #E53935;" />

        <Label text="Enter details to find and cancel the booking."
               style="-fx-size: 14px; -fx-text-fill: #555;" />

        <VBox spacing="10">
            <Label text="Enter Student ID:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="studentIdField"
                       promptText="Student ID (8 digits)"
                       prefWidth="260"/>
        </VBox>

        <VBox spacing="10">
            <Label text="Reservation Date:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <DatePicker fx:id="cancellationDate" prefWidth="260"/>
        </VBox>

        <VBox spacing="10">
            <Label text="Select Reserved Laboratory:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <ComboBox fx:id="labCombo" prefWidth="260"
                      promptText="Choose Laboratory" />
        </VBox>

        <VBox spacing="10">
            <Label text="Time Slot (Optional):"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <ComboBox fx:id="startTimeCombo" promptText="Start" prefWidth="125"/>
                <ComboBox fx:id="endTimeCombo" promptText="End" prefWidth="125"/>
            </HBox>
        </VBox>

        <Button text="CONFIRM CANCELLATION"
                onAction="#handleCancel"
                prefWidth="220"
                styleClass="cancel-reservation-button" />

        <Button text="Back"
                onAction="#goBack"
                prefWidth="200"
                styleClass="cancel-back-button" />

    </VBox>

</ScrollPane>