<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.eqlab2.EqlabController"
      alignment="CENTER"
      spacing="15"
      prefWidth="400" prefHeight="650"
      style="-fx-padding: 40; -fx-background-color: #f4f6fb;">

    <Label text="LOGIN"
           style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField"
               promptText="Username"
               prefWidth="260" />

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   prefWidth="260" />

    <!-- Action can be changed deppending on the new db-->
    <Button text="Login"
            onAction="#goDirectDashboard"
            prefWidth="220" prefHeight="40"
            style="-fx-background-color: #90caf9; -fx-background-radius: 20;" />

    <Button text="Back"
            onAction="#goBackToHome"
            prefWidth="200"
            style="-fx-background-color: #d0d0d0; -fx-background-radius: 15;" />

</VBox>
