<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.eqlab2.EqlabController"
      alignment="CENTER"
      spacing="15"
      stylesheets="@clothes.css"
      prefWidth="400" prefHeight="650"
      style="-fx-padding: 40; -fx-background-color: #f4f6fb;">

    <Label text="LOGIN"
           style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField"
               promptText="Username"
               prefWidth="260" />

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   prefWidth="260" />

    <Button fx:id="loginButton"
            id="loginButton"
            text="Login"
            onAction="#goDirectDashboard"
            prefWidth="220" prefHeight="40" />

    <Button fx:id="backButton"
            id="backButton"
            text="Back"
            onAction="#goBackToHome"
            prefWidth="200" />

</VBox>
